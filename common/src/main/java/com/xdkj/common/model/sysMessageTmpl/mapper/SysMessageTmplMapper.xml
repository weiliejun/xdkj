                ID,
            </if>
            <if test="parentCode != null">
                PARENT_CODE,
            </if>
            <if test="busiType != null">
                BUSI_TYPE,
            </if>
            <if test="type != null">
                TYPE,
            </if>
            <if test="title != null">
                TITLE,
            </if>
            <if test="content != null">
                CONTENT,
            </if>
            <if test="createTime != null">
                CREATE_TIME,
            </if>
            <if test="dataStatus != null">
                DATA_STATUS,
            </if>
            <if test="status != null">
                STATUS,
            </if>
            <if test="creatorId != null">
                CREATOR_ID,
            </if>
            <if test="creatorName != null">
                CREATOR_NAME,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
